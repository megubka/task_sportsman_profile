.c-predictions
    .header
        font-family "Josefin Sans", Helvetica, sans-serif
        color #172B4D

.c-discipline
    padding 5px 10px
    margin 5px 0
    border-radius 3px
    border 1px solid #172B4D

.filters
    display: grid
    grid-template-columns: repeat(7, 1fr)
    grid-gap: 5px
    h3
        grid-column: 1 / 8
    p 
        text-align: center
        font-size: 14px

.filter-btn
    width: 80%
    height: 30px
    background-color: gray
    border-radius: 30px
    padding: 5px
    transition: all 300ms ease-in-out

.filter-btn.active
        background: #00acee


.filter-inner-circle
    width: 30px
    height: 30px
    background-color: #fff
    border-radius: 50%
    transition: all 300ms ease-in-out

.filter-inner-circle.active
        margin-left: 35px


